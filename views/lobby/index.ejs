                <a href="/games?rank=beginner">Play</a>
            </div>

            <div class="room">
                <div class="room-info">
                    <span>Rank: <strong>Intermediate</strong></span>
                    <span id="intermediate-rooms">20 rooms</span>
                </div>

                <a href="/games?rank=intermediate">Play</a>
            </div>

            <div class="room">
                <div class="room-info">
                    <span>Rank: <strong>Advanced</strong></span>
                    <span id="advanced-rooms">20 rooms</span>
                </div>

                <a href="/games?rank=advanced">Play</a>
            </div>

            <div class="room">
                <div class="room-info">
                    <span>Rank: <strong>Expert</strong></span>
                    <span id="expert-rooms">20 rooms</span>
                </div>

                <a href="/games?rank=expert">Play</a>
            </div>

            <p class="total" id="total-users">Total Users: 100</p>

            <p class="total" id="total-rooms">Total Rooms: 80</p>
        </div>
    </div>
</div>

